<div>
  <img src="<%= @user.avatar.url %>" height="200" width="200">
  <h3>
    <%= @user.email %>
  </h3>
</div>
<dl>
  <h4>Your Reviews:</h4>
  <% @reviews.each do |review| %>
    <dt>Park Name: <%= link_to review.park.name, park_path(review.park) %></li>
    <dd>
      <li>Review: <%= review.body %></li>
    </dd>
  </dt>
  <% end %>
</dl>


<h3> <%= @user.email %> </h3>
<div class="row">
  <% if @user.avatar.url %>
    <div class="avatar-resize column">
      <img src="<%= @user.avatar.url %>" />
    </div>
  <% end %>
  <div class="species-thumbnail column end">
  <% if @user.species %>
    <img src="<%= @user.species.thumbnail %>" />
    <% end %>
  </div>
</div>
<div class="row">
  <div class="column">
    <dl>
      <h4>Your Reviews</h4>
      <% @reviews.each do |review| %>
        <dt>
          Park Name: <%= link_to review.park.name, park_path(review.park) %>
        </dt>
        <dd>
          Review: <%= review.body %>
        </dd>
      <% end %>
    </dl>
  </div>
</div>

<h1> <%= @user.email %> </h1>

<% if current_user.try(:admin?) %>
 <div class="button alert delete-user-button" id="user-<%= @user.id %>">Delete User</div>
<% end %>

<div>
  <img src="<%= @user.avatar.url %>" height="200" width="200">
</div>

<dl>
  <h3>Your Reviews</h3>
  <% @reviews.each do |review| %>
    <dt>Park Name: <%= review.park.name %></li>
    <dd>
      <li>Review: <%= review.body %></li>
    </dd>
  </dt>
  <% end %>
</dl>
